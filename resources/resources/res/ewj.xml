<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:textAlignment="center">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/constraintLayout" android:background="#f3f3f3" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true">
            <ImageView android:id="@+id/image_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:src="@drawable/ic_arrow_back" android:contentDescription="@string/(name removed)" android:layout_marginStart="12dp"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#484848" android:id="@+id/mobile_lock_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="@string/(name removed)" android:lineSpacingExtra="14sp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <ImageView android:id="@+id/npciLogo" android:layout_width="80dp" android:layout_height="50dp" android:layout_marginRight="16dp" android:src="@drawable/ic_upi_npci_logo" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/divider" android:background="#d7d7d7" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignBottom="@+id/constraintLayout"/>
    <ImageView android:id="@+id/image_mobile_lock" android:layout_width="match_parent" android:layout_height="106dp" android:layout_marginTop="80dp" android:src="@drawable/ic_mobile_lock" android:layout_alignTop="@+id/divider" android:contentDescription="@string/(name removed)" android:layout_marginStart="88dp" android:layout_marginEnd="88dp" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/(name removed)" android:id="@+id/mobile_lock_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="136dp" android:text="@string/(name removed)" android:layout_alignTop="@+id/image_mobile_lock" android:textAlignment="center" android:layout_marginStart="88dp" android:layout_marginEnd="88dp" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="13sp" android:textColor="@color/(name removed)" android:id="@+id/mobile_lock_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/(name removed)" android:layout_alignTop="@+id/mobile_lock_header" android:lineSpacingExtra="6.5sp" android:alpha="0.5" android:textAlignment="center" android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <Button android:textSize="14sp" android:textColor="@color/(name removed)" android:id="@+id/settings_button" android:layout_width="224dp" android:layout_height="52dp" android:layout_marginTop="80dp" android:text="@string/(name removed)" android:layout_alignTop="@+id/mobile_lock_msg" android:layout_marginStart="88dp" android:layout_marginEnd="88dp" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" android:backgroundTint="#1b3281"/>
</RelativeLayout>
