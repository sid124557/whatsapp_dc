<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layoutDirection="ltr">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="36dp">
        <TextView android:textSize="12sp" android:textColor="@color/(name removed)" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/transaction_details_item_name" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="1" android:layout_weight="1" android:layoutDirection="ltr"/>
        <TextView android:textSize="14sp" android:textColor="@color/(name removed)" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/transaction_details_item_value" android:paddingLeft="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="2" android:layout_weight="3" android:fontFamily="monospace" android:layoutDirection="ltr"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/verified_merchant" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="@color/(name removed)" android:ellipsize="end" android:gravity="top" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="1" android:layout_weight="1" android:layoutDirection="ltr"/>
        <TextView android:textSize="10sp" android:textColor="@color/(name removed)" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/verified" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="2" android:drawableLeft="@drawable/ic_tick_green_solid" android:layout_weight="3" android:fontFamily="sans-serif-medium" android:layoutDirection="ltr"/>
    </LinearLayout>
</LinearLayout>
